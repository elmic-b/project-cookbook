<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Project Cookbook{% endblock %}</title>
    {% block stylesheets %}
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://fonts.googleapis.com/css?family=Butterfly+Kids|Roboto" rel="stylesheet">
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>
<body>

<nav>
    <div class="burger-container">
        <div id="burger">
            <div class="bar topBar"></div>
            <div class="bar btmBar"></div>
        </div>
    </div>

    <div class="logo-container"><a href="{{ path('app_home') }}">PROJECT COOKBOOK</a></div>

    <div class="blank"> </div>

    <ul class="menu">
        <li class="menu-item"><a href="{{ path('app_rezepte-uebersicht') }}">onlinebuch</a></li>
        <li class="menu-item"><a href="{{ path('app_suche') }}">suche</a></li>
        <li class="menu-item"><a href="#">über uns</a></li>
        <li class="menu-item"><a href="{{ path('app_kontakt') }}">social media</a></li>
    </ul>
    <div class="account-container">
        <a href="#">
            <img src="{{ asset('images/svgs/user.svg') }}" width="27" alt="Userlogo, der Link führt zur Anmeldung" itemprop="image">
        </a>
    </div>
</nav>


{% block body %}{% endblock %}


{% block javascripts %}
    <script>(function(){var burger=document.querySelector(".burger-container"),header=document.querySelector("nav");burger.onclick=function(){header.classList.toggle("menu-opened")}})()</script>
    {{ encore_entry_script_tags('app') }}
{% endblock %}
</body>
</html>